<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tVHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Selamat datang di Photon Troops!"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profil_img"
        app:civ_border_width="1dp"
        app:civ_border_color="#2d3436"
        android:layout_centerVertical="true"
        android:layout_below="@id/tVHome"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/userName_text"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="15dp"
        android:hint="User name"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/userName_email"
        android:layout_width="300dp"
        android:layout_height="23dp"
        android:layout_below="@+id/userName_text"
        android:layout_marginTop="10dp"
        android:hint="User email"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/userName_phone"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_below="@+id/userName_email"
        android:layout_marginTop="10dp"
        android:hint="User phone"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Log Out"
        android:background="@drawable/transparent_bg_bordered_button"
        android:layout_below="@id/tVHome"
        android:layout_marginTop="300dp"/>

</RelativeLayout>
</ScrollView>